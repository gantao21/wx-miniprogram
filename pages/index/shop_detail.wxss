.article{
  margin-top: -44rpx;
}
.swiper-tab{
    width: 100%;
    border-bottom: 2rpx solid #ccc;
    text-align: center;
     height: 88rpx; 
    line-height: 88rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
}
.swiper-tab-item{
    width: 30%; 
    color:#434343;
    font-size: 28rpx;
}
.active{
    color:#d4237a;
    border-bottom: 4rpx solid #d4237a;
}
.swiperImg {
  width: 100%;
}
.slide-image{
  width: 100%;
}
#discountView{
    display: flex;
    flex-direction:row;
    height: 100rpx;
}
#discountView view:first-child{
  background-color: red;
  width: 55%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  color: #fff;

}
#discountView view:first-child text:first-child{
  width: 60%;
  margin-left: 20rpx;
  font-size: 60rpx;
}
#discountView view:first-child text:nth-child(2){
  width: 40%;
  margin-top: 24rpx;
  font-size: 30rpx;
  text-decoration:line-through;
}
#discountView view:nth-child(2){
  background-color: yellow;
  width: 45%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
}
#discountView view:nth-child(2) text:first-child{
  font-size: 26rpx;
  text-align: center;
} 
#discountView view:nth-child(2) text:nth-child(2){
  font-size: 40rpx;
  text-align: center;
} 
.page_column{
  display: flex;
  margin-top: 20rpx;
  flex-direction: column
}
.title{
  display: flex;
  flex-direction: row;
}
.searchcion {  
  margin: 10rpx 10rpx 10rpx 10rpx;  
  position: absolute;  
  left:25rpx;  
  z-index: 2;  
  width: 20px;  
  height: 20px;  
  text-align: center;  
} 

.product_list .pic image{
  width: 100%;
